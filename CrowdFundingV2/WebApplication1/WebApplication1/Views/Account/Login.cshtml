@using WebApplication1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<div class="layout-2cols">
    <div class="content grid_8">
        <div class="single-page">
            <div class="wrapper-box box-post-comment">
                <h2 class="common-title">@ViewBag.Title.</h2>
                <div class="form login-form">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="box-white">
                                <h4 class="rs title-box">Already Have an Account?</h4>
                                <p class="rs">Please log in to continue.</p>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-action">
                                    @Html.LabelFor(m => m.Email, new { @class = "txt_email_login" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "txt fill-width" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                    @Html.LabelFor(m => m.Password, new { @class = "txt_password_login" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "txt fill-width" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                    @Html.LabelFor(m => m.RememberMe, new { @class = "lbl_remember" })
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "chk_remember" })
                                </div>
                            </div>


                            <p class="rs ta-c pb10">
                                <input type="submit" value="Log in" class="btn btn-red btn-submit" />
                            </p>
                                    <p class="rs ta-c">
                                        @Html.ActionLink("I forgot my password", "ForgotPassword", null, new { @class = "fc-orange" })
                                    </p>
                                    <p class="rs ta-c">
                                        @Html.ActionLink("Register as a new user", "Register", null, new { @class = "fc-orange" })
                                    </p>
                        }
                    </section>
                </div>
            </div>
        </div><!--end: .box-list-comment -->
    </div>
</div><!--end: .content -->
<div class="clear"></div>