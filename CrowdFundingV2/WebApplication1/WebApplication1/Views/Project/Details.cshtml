                                    @foreach (var comment in Model.Comments)
                                    {
                                        @Html.Partial("_ProjectCommentPartial", comment)

                                    }
                                </div>
                            </div><!--end: .tab-pane(Comments) -->
                        </div>
                    </div>
                </div><!--end: .project-tab-detail -->
