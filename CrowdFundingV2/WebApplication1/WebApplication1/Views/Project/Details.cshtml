                                        <li><img src="@Url.Content("~/Content/myTemplate/")images/ex/th-552x411-1.jpg" alt=""></li>
                                        <li><img src="@Url.Content("~/Content/myTemplate/")images/ex/th-552x411-2.jpg" alt=""></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div><!--end: .top-project-info -->
                    <div class="bottom-project-info clearfix">
                        <div class="project-progress sys_circle_progress" data-percent="@Model.Ratio">
                            <div class="sys_holder_sector"></div>
                        </div>
                        <div class="group-fee clearfix">
                            <div class="fee-item">
                                <p class="rs lbl">Bankers</p>
                                <span class="val">@Model.CurrentBackerCount</span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Pledged</p>
                                <span class="val">€@Model.CurrentFund</span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Days Left</p>
                                <span class="val">@Model.DaysLeft</span>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
