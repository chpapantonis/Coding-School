@model WebApplication1.Models.ProjectEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<div class="layout-2cols">
    <div class="content grid_8">
        <div class="project-detail">
            <div class="project-tab-detail tabbable accordion">
                <ul class="nav nav-tabs clearfix">
                    <li class="active"><a href="#">Profile</a></li>
                    <li><a href="#" class="be-fc-orange">Account</a></li>
                    <li><a href="#" class="be-fc-orange">Updates</a></li>
                    <li><a href="#" class="be-fc-orange">Comments</a></li>
                    <li><a href="#" class="be-fc-orange">Projects</a></li>
                </ul>
                <div class="tab-content">
                    <div>
                        <h3 class="rs alternate-tab accordion-label">Profile</h3>
                        <div class="tab-pane accordion-content active">
                            <div class="form form-profile">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Project.Id)
                                    @Html.HiddenFor(model => model.Project.CreatorId)

                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.Title, htmlAttributes: new { @class = "lbl" })
                                        <div class="val">
                                            @Html.EditorFor(model => model.Project.Title, new { htmlAttributes = new { @class = "txt" } })
                                            @Html.ValidationMessageFor(model => model.Project.Title, "", new { @class = "text-danger" })
                                            <p class="rs description-input">Your name is displayed on your profile.</p>
                                        </div>
                                    </div>
                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.Description, htmlAttributes: new { @class = "lbl" })
                                        <div class="val">
                                            @Html.EditorFor(model => model.Project.Description, new { htmlAttributes = new { @class = "txt" } })
                                            @Html.ValidationMessageFor(model => model.Project.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.StatusId, "StatusId", htmlAttributes: new { @class = "lbl" })

                                        <div class="val">
                                            <select name="@Html.NameFor(m => m.SelectedStatusId)" class="txt">
                                                @foreach (var c in Model.Statuses)
                                                {
                                                    <option value="@c.Id">@c.Name</option>
                                                }
                                            </select>

                                            @Html.ValidationMessageFor(model => model.SelectedStatusId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.CategoryId, "StatusId", htmlAttributes: new { @class = "lbl" })

                                        <div class="val">
                                            <select name="@Html.NameFor(m => m.SelectedCategoryId)" class="txt">
                                                @foreach (var c in Model.Categories)
                                                {
                                                    <option value="@c.Id">@c.Name</option>
                                                }
                                            </select>

                                            @Html.ValidationMessageFor(model => model.SelectedCategoryId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.DueDate, htmlAttributes: new { @class = "lbl" })
                                        <div class="val">
                                            @Html.EditorFor(model => model.Project.DueDate, new { htmlAttributes = new { @class = "txt" } })
                                            @Html.ValidationMessageFor(model => model.Project.DueDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.TargetAmount, htmlAttributes: new { @class = "lbl" })
                                        <div class="val">
                                            @Html.EditorFor(model => model.Project.TargetAmount, new { htmlAttributes = new { @class = "txt" } })
                                            @Html.ValidationMessageFor(model => model.Project.TargetAmount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="row-item clearfix">
                                        @Html.LabelFor(model => model.Project.DateVerified, htmlAttributes: new { @class = "lbl" })
                                        <div class="val">
                                            @Html.EditorFor(model => model.Project.DateVerified, new { htmlAttributes = new { @class = "txt" } })
                                            @Html.ValidationMessageFor(model => model.Project.DateVerified, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <p class="wrap-btn-submit rs ta-r">
                                        <button class="btn btn-red btn-submit-all">Save all settings</button>
                                    </p>
                                }
                            </div>
                        </div><!--end: .tab-pane -->
                    </div>
                    <div>
                        <h3 class="rs alternate-tab accordion-label">Account</h3>
                        <div class="tab-pane accordion-content">
                            <div class="tab-pane-inside">
                                <div class="project-author pb20">
                                    <div class="media">
                                        <a href="#" class="thumb-left">
                                            <img src="images/ex/th-90x90-1.jpg" alt="$USER_NAME">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b">John Doe</a></h4>
                                            <p class="rs">Chicago, IL</p>
                                            <p class="rs fc-gray pb10">5 projects</p>
                                            <p class="rs description">Mauris vel lacus vitae felis vestibulum volutpat. Etiam est nunc, venenatis in, tristique eu, imperdiet ac, nisl. Cum sociis natoque penatibus et magnis dis parturient montes</p>
                                        </div>
                                    </div>
                                </div><!--end: .project-author -->
                            </div>
                        </div><!--end: .tab-pane -->
                    </div>
                    <div>
                        <h3 class="rs alternate-tab accordion-label">Updates</h3>
                        <div class="tab-pane accordion-content">
                            <a class="post-new-comment be-fc-orange" href="/ProjectUpdates/Create/@Model.Id"><i class="icon iPost"></i> Post an Update</a>
                            <div class="box-list-comment">
                                
                                @foreach (var update in Model.Updates)
                                {
                                    <div class="media comment-item">
                                        <a href="#" class="thumb-left">
                                            <img src="images/ex/th-90x90-1.jpg" alt="$TITLE">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="rs comment-author">
                                                <a href="#" class="be-fc-orange fw-b">@update.FullName</a>
                                                <span class="fc-gray">say:</span>
                                            </h4>
                                            <p class="rs comment-content"> @update.Text</p>
                                            <p class="rs time-post">on @update.DateInserted</p>
                                        </div>
                                    </div><!--end: .comment-item -->
                                }
                            </div>
                        </div><!--end: .tab-pane -->
                    </div>
                    <div>
                        <h3 class="rs alternate-tab accordion-label">Comments</h3>
                        <div class="tab-pane accordion-content">
                            <a class="post-new-comment be-fc-orange" href="/UserProjectComments/Create/@Model.Id"><i class="icon iPost"></i> Post a Comment</a>
                            <div class="box-list-comment">

                                @foreach (var comment in Model.Comments)
                                {
                                <div class="media comment-item">
                                    <a href="#" class="thumb-left">
                                        <img src="images/ex/th-90x90-1.jpg" alt="$TITLE">
                                    </a>
                                    <div class="media-body">
                                        <h4 class="rs comment-author">
                                            <a href="#" class="be-fc-orange fw-b">@comment.CommentorFullName</a>
                                            <span class="fc-gray">say:</span>
                                        </h4>
                                        <p class="rs comment-content"> @comment.Text</p>
                                        <p class="rs time-post">on @comment.DateInserted</p>
                                    </div>
                                </div><!--end: .comment-item -->
                                }
                            </div>
                        </div><!--end: .tab-pane -->
                    </div>
                    <div>
                        <h3 class="rs alternate-tab accordion-label">Projects</h3>
                        <div class="tab-pane accordion-content">
                        @foreach (var project in Model.MyProjects)
                        {
                            <div class="box-marked-project project-short inside-tab">
                                <div class="top-project-info">
                                    <div class="content-info-short clearfix">
                                        <a href="#" class="thumb-img">
                                            <img src="images/ex/th-292x204-1.jpg" alt="$TITLE">
                                        </a>
                                        <div class="wrap-short-detail">
                                            <h3 class="rs acticle-title"><a class="be-fc-orange" href="/project/edit/@project.Id">@project.Title</a></h3>
                                            <p class="rs tiny-desc">by <a href="#" class="fw-b fc-gray be-fc-orange">@project.CreatorFullName</a> </p>
                                            <p class="rs title-description">@project.Description</p>
                                        </div>
                                        <p class="rs clearfix comment-view">
                                            <a href="#" class="fc-gray be-fc-orange">@project.NoComments comments</a>
                                            
                                        </p>
                                    </div>
                                </div><!--end: .top-project-info -->
                                <div class="bottom-project-info clearfix">
                                    <div class="project-progress sys_circle_progress" data-percent="@project.Ratio">
                                        <div class="sys_holder_sector"></div>
                                    </div>
                                    <div class="group-fee clearfix">
                                        <div class="fee-item">
                                            <p class="rs lbl">Bankers</p>
                                            <span class="val">@project.CurrentBackerCount</span>
                                        </div>
                                        <div class="sep"></div>
                                        <div class="fee-item">
                                            <p class="rs lbl">Pledged</p>
                                            <span class="val">€@project.CurrentFund</span>
                                        </div>
                                        <div class="sep"></div>
                                        <div class="fee-item">
                                            <p class="rs lbl">Days Left</p>
                                            <span class="val">@project.DaysLeft</span>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div><!--end: .box-marked-project -->
                        }
                        </div><!--end: .tab-pane -->
                    </div>
                </div>
            </div><!--end: .project-tab-detail -->
        </div>
    </div><!--end: .content -->
    <div class="sidebar grid_4">
        <div class="box-gray project-author">
            <h3 class="title-box">Project by</h3>
            <div class="media">
                <a href="#" class="thumb-left">
                    <img src="images/ex/th-90x90-1.jpg" alt="$USER_NAME" />
                </a>
                <div class="media-body">
                    <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b">John Doe</a></h4>
                    <p class="rs">Chicago, IL</p>
                    <p class="rs fc-gray">5 projects</p>
                </div>
            </div>
            <div class="author-action">
                <a class="btn btn-red" href="#">Edit info</a>
                <a class="btn btn-white" href="#">Logout</a>
            </div>
        </div><!--end: .project-author -->
    </div><!--end: .sidebar -->
    <div class="clear"></div>
</div>




